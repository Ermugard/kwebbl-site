{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser" : true,
    "es6": true,
    "node": true

  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "semi": ["error", "always", { "omitLastInOneLineBlock": false}]
  },
  "settings": {
    "import/ignore": [
      "^*.(scss|less|css)$"
    ]
  }
}
